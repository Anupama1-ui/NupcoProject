    <TextView
        android:id="@+id/sigUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textSize="30sp"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/aljazeera_arabic_regular"
        android:textColor="#445FEF"
        android:textStyle="bold"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_and_start_arranging_your_activities"
        android:layout_below="@+id/sigUp"
        android:textSize="12sp"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/aljazeera_arabic_regular"
        android:textColor="#101010"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/companyEmail_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:boxStrokeWidth="0.5sp"
        app:hintTextColor="@null"
        android:layout_below="@+id/subText"
        android:hint="@string/company_email"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="#4486F4"
        app:endIconTint="@null"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_mail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/teal_700"
            android:layout_below="@id/companyEmail_2"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:boxStrokeWidth="0.5sp"
        app:hintTextColor="@null"
        android:layout_below="@+id/companyEmail_2"
        android:hint="@string/password"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="#4486F4"
        app:endIconTint="@null"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/teal_700"
            android:layout_below="@id/companyEmail_2"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirmPasswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:boxStrokeWidth="0.5sp"
        app:hintTextColor="@null"
        android:layout_below="@+id/passwrd"
        android:hint="@string/confirm_password"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="#4486F4"
        app:endIconTint="@null"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/teal_700"
            android:layout_below="@id/passwrd"/>

    </com.google.android.material.textfield.TextInputLayout>


